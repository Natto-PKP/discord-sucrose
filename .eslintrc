{
  "root": true,

  "ignorePatterns": ["config", "data", "dist", "lib"],

  "overrides": [
    {
      "files": ["src/**/*.ts", "src/**/*.d.ts", "typings/**/*.d.ts"],
      "env": { "node": true },
      "plugins": ["@typescript-eslint"],
      "extends": ["airbnb-base", "airbnb-typescript/base"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "tsconfig.json"
      }
    }
  ]
}
